{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "FAUST_SECRET_KEY",
        "NEXT_PUBLIC_URL",
        "NEXT_PUBLIC_WORDPRESS_URL",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_SECRET",
        "AUTH_SECRET",
        "SECRET_COOKIE_PASSWORD"

      ],
      "outputs": [".next/**/*", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": [
        "FAUST_SECRET_KEY",
        "NEXT_PUBLIC_URL",
        "NEXT_PUBLIC_WORDPRESS_URL"
      ],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "generate": {
      "cache": false
    }
  }
}
